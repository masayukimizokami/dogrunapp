<h1>新着登録ドッグラン</h1>
<h6>新着5件</h6>
<br>
<div class="index-area">
  <div class="index-area-box">
    <table>
      <tbody>
        <% @dogruns.each do |dogrun| %>
          <tr>
            <%= link_to dogrun_path(dogrun) do %>
              <div class="dogrun-index-box">
                <div><%= image_tag dogrun.image ,class: 'dogrun-image' %></div>
                <div class='dogrun-index-name'><%= dogrun.dogrun_name %></div>
                <div class='dogrun-index-area'><%= dogrun.area %></div>
                <div class='dogrun-index-address'><%= dogrun.address %></div>
              </div>
            <% end %>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
