
<div class="container">  

  <!--ロゴ・検索スペース-->   
  <div id="header-left-erea">  
    <div id="header-rogo-box">
      <%= link_to 'DOGRANs NAVI', dogruns_path ,class:'header-title' %>
    </div>
    <div id="header-search-box" >
      <%= search_form_for @q, url: search_dogruns_path do |f| %>   
        <%= f.search_field :dogrun_name_or_address_cont ,placeholder: "キーワード検索" %>
        <%= f.submit '検索' %>
      <% end %>
    </div>
  </div>
  <div id="header-center-erea" >
  </div>

  <!--userアイコン-->
  <div id="header-rigth-erea">  
    <div id="header-user-img-box">
      <% if current_user.image.attached? %>
        <%= image_tag current_user.image,class: 'header-user-image' %>
      <% else %>
        <%= image_tag 'no-image.user.png' ,class: 'header-user-image'%>
      <% end %>
      <!--ユーザー名-->
      <% if user_signed_in? %>
        <div id="header-user-name">
          <%= current_user.name %>
        </div>
      <% end %>
    </div>
    <!--dropdown-->
    <div class="header-dropdown">             
      <button class="btn btn-secondary dropdown-toggle" type="button" id="dropdownMenuButton1" data-bs-toggle="dropdown" aria-expanded="false">
       <p>Dropdown button</p>
      </button>
      <ul class="dropdown-menu" aria-labelledby="dropdownMenuButton1">
        <li><%= link_to "ドッグランを登録する", "/dogruns/new" ,class: "header-link"%></li>
        <li><%= link_to "設定ページ", edit_user_registration_path(current_user) ,class: "header-link"%></li>
        <li><%= link_to "登録済みドッグランページ", profiles_path ,class: "header-link"%></li>
        <li><%= link_to "登録済みコメント", "/comments/" ,class: "header-link"%></li>
        <li><%= link_to "ログアウト", destroy_user_session_path, method: :delete,class: "header-link"%></li>
      </ul>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta1/dist/js/bootstrap.bundle.min.js" integrity="sha384-ygbV9kiqUc6oa4msXn9868pTtWMgiQaeYH7/t7LECLbyPA2x65Kgf80OJFdroafW" crossorigin="anonymous"></script>
  </div>
