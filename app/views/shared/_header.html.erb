<div class="container">  

  <!--ロゴ・検索スペース-->   
  <div id="header-left-erea">  
    <div class="header-rogo-box">
      <%= link_to 'DOGRANs NAVI', dogruns_path ,class:'header-title' %>
    </div>
    <div id="header-search-box" >
      <%= search_form_for @q, url: search_dogruns_path do |f| %>   
        <%= f.search_field :dogrun_name_or_address_or_area_cont ,placeholder: "フリー検索",class:'search_field' %>
        <%= f.submit '検索',class:'search_submit' %>
      <% end %>
    </div>
  </div>
  <div id="header-center-erea" >
  </div>

  <!--userアイコン-->
    <div id="header-rigth-erea"> 
      <div id="header-user-img-box">
        <% if current_user.image.attached? %>
          <div><%= image_tag current_user.image,class: 'header-user-image' %></div>
        <% else %>
          <div><%= image_tag 'no-image.user.png' ,class: 'header-user-image'%></div>
        <% end %>
        <!--ユーザー名-->
        <% if user_signed_in? %>
          <div id="header-user-name">
            <%= current_user.name %>
          </div>
        <% end %>
      </div> 
    <div>  
  
    <!--button-->
    <div class="header-dropdown">             
        <ul>
          <li><%= link_to "/dogruns/new" ,class:'header-link-title' do%>
            DOGRUNs<br>登録
          <%end%></li>
        
    
                  
          <li><%= link_to "MY PAGE", profile_path(current_user) ,class:'header-link-title' %></li>
        </ul>
    
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta1/dist/js/bootstrap.bundle.min.js" integrity="sha384-ygbV9kiqUc6oa4msXn9868pTtWMgiQaeYH7/t7LECLbyPA2x65Kgf80OJFdroafW" crossorigin="anonymous"></script>
  </div>
